@model BrewCityRentals.Models.IndexModel

@{
    ViewBag.Title = "Brew City Rentals | Home";
}

<div class="jumbotron">
    <h1 class="text-center">Brew City Rentals</h1>
</div>

<div class="accordion" id="options">
    <div class="card">
        <div class="card-header text-center" id="search-heading">
            <a class="btn" data-toggle="collapse" data-target="#search-partial" aria-expanded="true" aria-controls="search-partial">
                <h2 class="margin-0-auto">Search</h2>
            </a>
        </div>

        <div id="search-partial" class="collapse" aria-labelledby="search-heading" data-parent="#options">
            <div class="card-body padding-left padding-right padding-bottom">
                <h2>Search Movies</h2>
                <form>
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.Movie.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Movie.Title, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Movie.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Movie.GenreID, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(model => model.Movie.GenreID, new SelectList(@Model.Movie.Genres, "GenreID", "GenreName"), new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header text-center" id="checkout-heading">
            <a class="btn collapsed" data-toggle="collapse" data-target="#checkout-partial" aria-expanded="false" aria-controls="checkout-partial">
                <h2 class="margin-0-auto">Checkout</h2>
            </a>
        </div>
        <div id="checkout-partial" class="collapse" aria-labelledby="checkout-heading" data-parent="#options">
            <div class="card-body">
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header text-center" id="return-heading">
            <a class="btn collapsed" data-toggle="collapse" data-target="#return-partial" aria-expanded="false" aria-controls="return-partial">
                <h2 class="margin-0-auto">Returns</h2>
            </a>
        </div>
        <div id="return-partial" class="collapse" aria-labelledby="return-heading" data-parent="#options">
            <div class="card-body">
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
    $(function () {
    });
    </script>
}